{
  "name": "@thednp/color",
  "author": "thednp",
  "version": "1.0.6",
  "description": "ðŸŽ¨ Fast color conversion tool made in TypeScript",
  "keywords": [
    "color",
    "manipulate",
    "typescript"
  ],
  "homepage": "http://github.com/thednp/color",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thednp/color.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "scripts": {
    "pre-test": "npm run clean-coverage",
    "test": "npm run pre-test && npx cypress run",
    "clean-coverage": "rimraf coverage .nyc_output",
    "cypress": "npm run pre-test && npx cypress open",
    "coverage:report": "nyc report --reporter=lcov --reporter=json --reporter=text --reporter=json-summary",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint:ts": "eslint -c .eslintrc.cjs --ext .ts src",
    "fix:ts": "eslint -c .eslintrc.cjs --ext .ts src --fix",
    "build": "npm run lint:ts && vite build && npm run dts",
    "dts": "dts-bundle-generator --config ./dts.config.ts"
  },
  "devDependencies": {
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@cypress/code-coverage": "^3.10.0",
    "@types/istanbul-lib-instrument": "^1.7.4",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "cypress": "^12.8.1",
    "dts-bundle-generator": "^7.2.0",
    "eslint": "^8.36.0",
    "eslint-plugin-jsdoc": "^40.0.3",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "istanbul-lib-coverage": "^3.2.0",
    "istanbul-lib-instrument": "^5.2.1",
    "ncp": "^2.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "typescript": "^5.0.2",
    "vite": "^4.2.0"
  }
}
