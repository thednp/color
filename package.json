{
  "name": "@thednp/color",
  "author": "thednp",
  "version": "1.0.9",
  "description": "ðŸŽ¨ Fast color conversion tool made in TypeScript",
  "keywords": [
    "color",
    "manipulate",
    "typescript"
  ],
  "homepage": "http://github.com/thednp/color",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thednp/color.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "scripts": {
    "pre-test": "pnpm clean-coverage",
    "test": "pnpm pre-test && npx cypress run",
    "badges": "npx -p dependency-version-badge update-badge typescript prettier vite cypress eslint",
    "prepublishOnly": "npm update && pnpm up && pnpm format && pnpm build && pnpm badges",
    "clean-coverage": "rimraf coverage .nyc_output",
    "cypress": "pnpm pre-test && npx cypress open",
    "coverage:report": "nyc report --reporter=lcov --reporter=json --reporter=text --reporter=json-summary",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint:ts": "eslint -c .eslintrc.cjs --ext .ts src",
    "fix:ts": "eslint -c .eslintrc.cjs --ext .ts src --fix",
    "build": "pnpm lint:ts && vite build && pnpm dts",
    "dts": "dts-bundle-generator --config ./dts.config.ts"
  },
  "devDependencies": {
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.2",
    "@cypress/code-coverage": "^3.12.44",
    "@types/istanbul-lib-instrument": "^1.7.7",
    "@types/node": "^22.2.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "cypress": "^13.13.2",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^8.57.0",
    "eslint-plugin-jsdoc": "^46.10.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-instrument": "^6.0.3",
    "ncp": "^2.0.0",
    "nyc": "^17.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.10",
    "typescript": "^5.5.4",
    "vite": "^5.4.0"
  },
  "packageManager": "pnpm@8.6.12"
}
